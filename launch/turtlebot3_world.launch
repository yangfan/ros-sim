<?xml version="1.0"?>
<launch>
  <!--Open the gazebo with house environment-->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find ros_sim)/worlds/turtlebot3.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>
  <!--Select robot and initial position-->
  <arg name="model" default="waffle" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="x_pos" default="-7.0"/>
  <arg name="y_pos" default="-3.0"/>
  <arg name="z_pos" default="0.0"/>
  <arg name="theta_orientation" default="1.5708"/>
  <!--Description of robot-->
  <param name="robot_description" command="$(find xacro)/xacro --inorder $(find ros_sim)/description/urdf/turtlebot3_$(arg model).urdf.xacro" />
  <!--Spawn robot in gazebo-->
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  args="-urdf -model turtlebot3_$(arg model) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -Y $(arg theta_orientation) -param robot_description" />
</launch>